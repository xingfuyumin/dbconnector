{
  "compilerOptions": {
   "target": "es5", 
    "module": "commonjs", 
    "strict": true,           
    "esModuleInterop": true, 
    "skipLibCheck": true,     
    "forceConsistentCasingInFileNames": true,  
    "outDir": "./build/",
    "suppressImplicitAnyIndexErrors":true
  },
  "include": [
    "src/**/*"
  ]
}
